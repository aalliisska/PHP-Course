<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                    https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\User" table="user">

        <id name="userId" type="integer" column="user_id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="firstName" column="first_name" type="string" length="200" />
        <field name="lastName" column="last_name" type="string" length="200" />
        <field name="middleName" column="middle_name" type="string" length="200" />
        <field name="gender" column="gender" type="string" length="200" />
        <field name="birthDate" column="birth_date" type="string" length="200" />
        <field name="email" column="email" type="string" length="200" />
        <field name="phone" column="phone" type="string" length="200" />
        <field name="avatarPath" column="avatar_path" type="string" length="200" />
    </entity>

</doctrine-mapping>